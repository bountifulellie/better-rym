{
  "manifest_version": 2,
  "name": "BetterRYM",
  "icons": {
    "16": "sonemic-16.png",
    "48": "sonemic-48.png",
    "128": "sonemic-128.png"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "js": ["browser-polyfill.js", "content.js"],
      "matches": ["*://*.rateyourmusic.com/*"],
      "run_at": "document_start"
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "extension-neutral-19.png",
      "38": "extension-neutral-38.png"
    },
    "default_title": "BetterRYM enabled"
  },
  "permissions": ["storage", "downloads", "tabs", "*://*/*"]
}
