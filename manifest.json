{
  "manifest_version": 2,

  "name": "better-rym",
  "description": "improvements for rateyourmusic.com",
  "version": "4.0.0",

  "content_scripts": [
    {
      "js": ["release.js"],
      "css": ["release.css"],
      "matches": ["*://*.rateyourmusic.com/release/*"],
      "run_at": "document_start"
    },
    {
      "js": ["import.js"],
      "matches": ["*://*.rateyourmusic.com/releases/ac*"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "*://*.soundcloud.com/*",
    "*://*.youtube.com/*",
    "*://*.bandcamp.com/*",
    "*://*.music.apple.com/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
