{
  "manifest_version": 2,
  "name": "BetterRYM",
  "icons": {
    "16": "sonemic-16.png",
    "48": "sonemic-48.png",
    "128": "sonemic-128.png"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "js": ["browser-polyfill.js", "content.js"],
      "matches": ["*://*.rateyourmusic.com/*"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "downloads", "*://*/*"],
  "browser_action": {
    "browser_style": true,
    "default_popup": "options.html",
    "default_icon": {
      "16": "sonemic-16.png",
      "48": "sonemic-48.png",
      "128": "sonemic-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "better-rym@jake.cafe"
    }
  }
}
