{
  "name": "BetterRYM",

  "content_scripts": [
    {
      "js": ["./src/release/index.tsx"],
      "matches": ["*://*.rateyourmusic.com/release/*"],
      "run_at": "document_start"
    },
    {
      "js": ["./src/import/index.tsx"],
      "matches": ["*://*.rateyourmusic.com/releases/ac*"],
      "run_at": "document_start"
    },
    {
      "js": ["./src/image/index.tsx"],
      "matches": ["*://*.rateyourmusic.com/images/upload*"],
      "run_at": "document_start"
    },
    {
      "js": ["./src/links/index.tsx"],
      "matches": ["*://*.rateyourmusic.com/submit_media_link*"],
      "run_at": "document_start"
    },
    {
      "js": ["./src/collection/index.tsx"],
      "matches": ["*://*.rateyourmusic.com/collection*"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["./src/background/index.ts"]
  },

  "permissions": ["storage", "downloads", "*://*/*"],

  "icons": {
    "16": "sonemic-16.png",
    "48": "sonemic-48.png",
    "128": "sonemic-128.png"
  }
}
